<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/MainLayout.css" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body> 
     <div class="container">
         <div class="row">
             <div class="col-md-6 col-sm-6 col-xs-6">
                 <div class="logo">
                     <h1><a href="#">Xrenki <span>e-Store</span></a></h1>
                     <p>My Shop</p>
                 </div>
             </div>

             <div class="col-md-6 col-sm-6 col-xs-6">
                 <div class="account">
                    <ul>
                        <li>
                            <div class="hidden-xs">
                                <h4><a>Call</a></h4>
                                <p>480.648.8122</p>
                            </div>

                            <div class="visible-xs">
                                <p>480.648.8122</p>
                            </div>
                        </li>
                    </ul>
                 </div>
                 </div>
             </div>
                 <div class="row">
                     <div class="col-md-12">
                         <div class="nav-menus">
                             <ul class="nav nav-pills">
                                 <li class="active"><a style="border-radius:initial;" href="#">Home</a></li>
                                 <li><a style="border-radius:initial;" href="#">Location</a></li>
                                 <li><a style="border-radius:initial;" href="#">About</a></li>


                             </ul>

                         </div>
                     </div>

                 </div>
             
          @RenderBody()
          <hr />
          <footer>
              <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
          </footer>
      </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
